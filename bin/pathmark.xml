<tool id="galaxy-pathmark" name="PathMark" version="2.0">
  <description>PathMark</description>
  <command interpreter="python">galaxyPATHMARK.py
-f "${filter_low};${filter_high}"
#if $hubfilter
  -u
#end if
-o $report
$data
$phenotype
$pathway
  </command>
  <inputs>
    <param name="data" type="data" format="matrix" label="Data Matrix File"/>
    <param name="phenotype" type="data" format="matrix" label="Clinical Phenotype File"/>
    <param name="pathway" type="data" format="tabular" label="Pathway File or Directory"/>
    <param name="filter_low" type="float" value="0.0" label="Filtering Lower Parameters"/>
    <param name="filter_high" type="float" value="0.0" label="Filtering Upper Parameters"/>
    <param name="hubfilter" type="boolean" label="Keep hubs with a majority of active downsteam genes"/>
  </inputs>
  <outputs>
      <data name="report" format="zip" label="Report files"/>
  </outputs>
    <help>
Wrapper for PathMark.  
    </help>
</tool>
